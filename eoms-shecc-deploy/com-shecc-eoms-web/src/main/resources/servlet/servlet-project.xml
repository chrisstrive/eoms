<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
		<!-- 定义映射 -->
		<bean id="projectHandlerMapping"
			class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
			<property name="mappings">
				<props>
					<prop key="/projectmng.htm">projectController</prop>
				</props>
			</property>
		</bean>

		<bean id="projectController" class="com.shecc.eoms.web.controller.ProjectController">
			<property name="methodNameResolver">
				<ref bean="paramResolver" />
			</property>
			<property name="projectService">
				<ref bean="projectService" />
			</property>
			<property name="listPage">
				<value>/boss/project/list</value>
			</property>
			<property name="addPage">
				<value>/boss/project/add</value>
			</property>
			<property name="updatePage">
				<value>/boss/project/update</value>
			</property>
		</bean>
	</beans>